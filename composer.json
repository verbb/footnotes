{
    "name": "verbb/footnotes",
    "description": "Adds a footnotes feature to Redactor fields and Twig templates.",
    "type": "craft-plugin",
    "version": "4.0.0",
    "keywords": [
        "craft",
        "cms",
        "craftcms",
        "craft-plugin",
        "redactor",
        "footnotes"
    ],
    "support": {
        "email": "support@verbb.io",
        "issues": "https://github.com/verbb/footnotes/issues?state=open",
        "source": "https://github.com/verbb/footnotes",
        "docs": "https://github.com/verbb/footnotes",
        "rss": "https://github.com/verbb/footnotes/commits/v2.atom"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Verbb",
            "homepage": "https://verbb.io"
        },
        {
            "name": "Vierbeuter",
            "homepage": "https://www.vierbeuter.de"
        }
    ],
    "require": {
        "php": "^8.0.2",
        "craftcms/cms": "^4.0.0",
        "verbb/base": "^2.0.0"
    },
    "autoload": {
        "psr-4": {
          "verbb\\footnotes\\": "src/"
        }
    },
    "extra": {
        "name": "Footnotes",
        "handle": "footnotes",
        "changelogUrl": "https://raw.githubusercontent.com/verbb/footnotes/craft-4/CHANGELOG.md",
        "class": "verbb\\footnotes\\Footnotes"
    }
}
